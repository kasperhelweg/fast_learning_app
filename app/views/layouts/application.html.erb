<!DOCTYPE html>
<html>
<head>
  <title>FastLearning</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/partials/global/shim' %>
</head>
<body>
  <div class="container">
    <%= render 'layouts/partials/global/header' %>
  
    
      <div class="container-fluid">
	<div class="row-fluid for-flash">
	  <div class="span12"> <%= render 'shared/render_flash' %> </div>
	</div>
	<div class="row-fluid">
	  <% if user_signed_in? %>	
            <div class="span2"><%= yield(:sidebar) %></div>
            <div class="span10"> 
	      <%= yield %>    
	    </div>
	  <% else %>
	  <div class="span12"> 
	    <%= yield %>    
	  </div>
	    
	  <% end %>
	</div>
	
	
	
	<div class="row-fluid">
	  <div class="span12">
	    <%= render 'layouts/partials/global/footer' %>	  
	    <%= debug(params) if Rails.env.development? %>
	    <%= debug(session) if Rails.env.development? %>
	  </div>   
	</div>	
      </div>
  </div>
</body>
</html>


